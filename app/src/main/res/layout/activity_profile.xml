<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <!-- Main content view -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/screens_bg">

                <ImageView
                    android:id="@+id/menu_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/menu_icon"
                    android:src="@drawable/ic_menu" />

                <TextView
                    android:id="@+id/restaurant_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:text="@string/restaurants_name"
                    android:textColor="@color/purple_txt"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="15dp"
                    android:background="@color/view_line_color" />


            </RelativeLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/screens_bg"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_back_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:contentDescription="@string/img_back_arrow"
                    android:src="@drawable/img_arrow_left"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/profile"
                    android:textColor="@color/txt_black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/img_back_arrow"
                    app:layout_constraintStart_toEndOf="@id/img_back_arrow"
                    app:layout_constraintTop_toTopOf="@id/img_back_arrow" />

                <TextView
                    android:id="@+id/txt_r"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="@string/r"
                    android:textColor="@color/purple"
                    android:textSize="42sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_heading" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_bg_purple"
                    android:padding="5dp"
                    android:src="@drawable/img_pencil"
                    app:layout_constraintBottom_toBottomOf="@id/txt_r"
                    app:layout_constraintEnd_toEndOf="@id/txt_r" />

                <TextView
                    android:id="@+id/txt_personal_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/personal_info"
                    android:textColor="@color/txt_grey"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/img_back_arrow"
                    app:layout_constraintTop_toBottomOf="@id/txt_r" />

                <TextView
                    android:id="@+id/txt_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/full_name"
                    android:textColor="@color/dialog_txt"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/txt_personal_info"
                    app:layout_constraintTop_toBottomOf="@id/txt_personal_info" />

                <EditText
                    android:id="@+id/edit_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_profile_fields"
                    android:hint="@string/enter"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:textColorHint="@color/txt_grey"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_full_name" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/email_id"
                    android:textColor="@color/dialog_txt"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/txt_personal_info"
                    app:layout_constraintTop_toBottomOf="@id/edit_full_name" />

                <EditText
                    android:id="@+id/edit_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_profile_fields"
                    android:hint="@string/enter"
                    android:inputType="textEmailAddress"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:textColorHint="@color/txt_grey"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_email" />

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/phone_number"
                    android:textColor="@color/dialog_txt"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/txt_personal_info"
                    app:layout_constraintTop_toBottomOf="@id/edit_email" />

                <View
                    android:id="@+id/view_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_profile_fields"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_phone" />

                <TextView
                    android:id="@+id/txt_91"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/_91"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/view_phone"
                    app:layout_constraintStart_toStartOf="@id/view_phone"
                    app:layout_constraintTop_toTopOf="@id/view_phone" />

                <View
                    android:id="@+id/view_line_1"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:background="@color/txt_grey"
                    app:layout_constraintBottom_toBottomOf="@id/txt_91"
                    app:layout_constraintStart_toEndOf="@id/txt_91"
                    app:layout_constraintTop_toTopOf="@id/txt_91" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="2dp"
                    android:background="@color/screens_bg"
                    android:hint="@string/_0000000000"
                    android:inputType="number"
                    android:textColorHint="@color/txt_grey"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/view_phone"
                    app:layout_constraintEnd_toEndOf="@id/view_phone"
                    app:layout_constraintStart_toEndOf="@id/view_line_1"
                    app:layout_constraintTop_toTopOf="@id/view_phone" />

                <Button
                    android:id="@+id/btn_save_personal_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_button"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="@string/save"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_phone" />

                <TextView
                    android:id="@+id/txt_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/change_password"
                    android:textColor="@color/txt_grey"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/img_back_arrow"
                    app:layout_constraintTop_toBottomOf="@id/btn_save_personal_info" />

                <TextView
                    android:id="@+id/txt_new_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/new_password"
                    android:textColor="@color/dialog_txt"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/txt_change_password"
                    app:layout_constraintTop_toBottomOf="@id/txt_change_password" />

                <EditText
                    android:id="@+id/edit_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_profile_fields"
                    android:hint="@string/_start_"
                    android:inputType="textPassword"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:textColorHint="@color/txt_grey"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_new_password" />

                <TextView
                    android:id="@+id/txt_confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/confirm_password"
                    android:textColor="@color/dialog_txt"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/txt_change_password"
                    app:layout_constraintTop_toBottomOf="@id/edit_new_password" />

                <EditText
                    android:id="@+id/edit_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/bg_profile_fields"
                    android:hint="@string/_start_"
                    android:inputType="textPassword"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:textColorHint="@color/txt_grey"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_confirm_password" />

                <Button
                    android:id="@+id/btn_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/bg_button"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="@string/save"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edit_confirm_password"
                    app:layout_constraintVertical_bias="0" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/custom_nav_container"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/bg_drawer"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_drawer"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/img_profile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="@string/r"
                    android:textColor="@color/purple"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nav_txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rudra"
                        android:textColor="@color/purple_txt"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nav_txt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rudra007_gmail_com"
                        android:textColor="@color/txt_grey"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/view_line_color_2" />

            <!-- Menu Items -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_drawer_item_purple"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/home"
                    android:src="@drawable/ic_home"
                    android:tag="drawer_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:tag="drawer_text"
                    android:text="@string/home"
                    android:textColor="@color/purple_txt"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_order_history"
                style="@style/DrawerItemStyle"
                android:background="@drawable/bg_drawer_item_grey">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/order_history"
                    android:src="@drawable/ic_history"
                    android:tag="drawer_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:tag="drawer_text"
                    android:text="@string/order_history"
                    android:textColor="@color/hint_color"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_profile"
                style="@style/DrawerItemStyle"
                android:background="@drawable/bg_drawer_item_grey">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/profile"
                    android:src="@drawable/ic_profile"
                    android:tag="drawer_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:tag="drawer_text"
                    android:text="@string/profile"
                    android:textColor="@color/hint_color"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_privacy"
                style="@style/DrawerItemStyle"
                android:background="@drawable/bg_drawer_item_grey">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/privacy_policy"
                    android:src="@drawable/ic_privacy"
                    android:tag="drawer_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:tag="drawer_text"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/hint_color"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_terms"
                style="@style/DrawerItemStyle"
                android:background="@drawable/bg_drawer_item_grey">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/terms_amp_conditions"
                    android:src="@drawable/ic_terms"
                    android:tag="drawer_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:tag="drawer_text"
                    android:text="@string/terms_amp_conditions"
                    android:textColor="@color/hint_color"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Logout -->
            <LinearLayout
                android:id="@+id/nav_logout"
                style="@style/DrawerItemStyle"
                android:background="@drawable/bg_drawer_item_red">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/log_out"
                    android:src="@drawable/ic_logout" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/log_out"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>


</androidx.drawerlayout.widget.DrawerLayout>