                <ImageView
                    android:id="@+id/img_veg_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/img_veg_sign"
                    android:src="@drawable/img_veg_sign"
                    app:layout_constraintStart_toStartOf="@id/txt_food_menu"
