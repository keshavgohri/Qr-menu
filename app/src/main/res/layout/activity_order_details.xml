    <FrameLayout
        android:id="@+id/custom_nav_container"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/bg_drawer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_drawer"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/img_profile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="@string/r"
                    android:textColor="@color/purple"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nav_txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rudra"
                        android:textColor="@color/purple_txt"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nav_txt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rudra007_gmail_com"
                        android:textColor="@color/txt_grey"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="16dp"
                android:background="@color/view_line_color_2" />

            <!-- Menu Items -->
            <LinearLayout
                android:id="@+id/nav_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_drawer_item_purple"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/home"
                    android:src="@drawable/ic_home"
                    android:tag="drawer_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:tag="drawer_text"
                    android:text="@string/home"
                    android:textColor="@color/purple_txt"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_order_history"
                style="@style/DrawerItemStyle"
                android:background="@drawable/bg_drawer_item_grey">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/order_history"
                    android:src="@drawable/ic_history"
                    android:tag="drawer_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:tag="drawer_text"
                    android:text="@string/order_history"
                    android:textColor="@color/hint_color"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_profile"
                style="@style/DrawerItemStyle"
                android:background="@drawable/bg_drawer_item_grey">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/profile"
                    android:src="@drawable/ic_profile"
                    android:tag="drawer_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:tag="drawer_text"
                    android:text="@string/profile"
                    android:textColor="@color/hint_color"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_privacy"
                style="@style/DrawerItemStyle"
                android:background="@drawable/bg_drawer_item_grey">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/privacy_policy"
                    android:src="@drawable/ic_privacy"
                    android:tag="drawer_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:tag="drawer_text"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/hint_color"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_terms"
                style="@style/DrawerItemStyle"
                android:background="@drawable/bg_drawer_item_grey">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/terms_amp_conditions"
                    android:src="@drawable/ic_terms"
                    android:tag="drawer_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:tag="drawer_text"
                    android:text="@string/terms_amp_conditions"
                    android:textColor="@color/hint_color"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Logout -->
            <LinearLayout
                android:id="@+id/nav_logout"
                style="@style/DrawerItemStyle"
                android:background="@drawable/bg_drawer_item_red">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/log_out"
                    android:src="@drawable/ic_logout" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/log_out"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>
