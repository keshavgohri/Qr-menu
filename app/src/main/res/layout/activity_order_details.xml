                    android:textColor="@color/txt_black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@id/txt_bar_menu"
                    app:layout_constraintTop_toBottomOf="@id/txt_bar_menu" />

                <TextView
                    android:id="@+id/txt_ml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_30_ml"
                    android:textColor="@color/txt_grey"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/txt_drink_1"
                    app:layout_constraintTop_toBottomOf="@id/txt_drink_1" />

                <TextView
                    android:id="@+id/txt_price_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_900"
                    android:textColor="@color/txt_black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/txt_ml"
                    app:layout_constraintEnd_toEndOf="@id/view_line_2"
                    app:layout_constraintTop_toTopOf="@id/txt_drink_1" />

                <TextView
                    android:id="@+id/txt_quantity_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_2"
                    android:textColor="@color/dialog_txt"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/txt_ml"
                    app:layout_constraintEnd_toEndOf="@id/txt_quantity_2"
                    app:layout_constraintStart_toStartOf="@id/txt_quantity_2"
                    app:layout_constraintTop_toTopOf="@id/txt_drink_1" />

                <View
                    android:id="@+id/view_line_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/view_line_color"
                    app:layout_constraintTop_toBottomOf="@id/txt_ml" />

                <TextView
                    android:id="@+id/txt_item_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/item_total"
                    android:textColor="@color/txt_black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@id/view_line_3"
                    app:layout_constraintTop_toBottomOf="@id/view_line_3" />

                <TextView
                    android:id="@+id/txt_price_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_1050"
                    android:textColor="@color/txt_black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/txt_item_total"
                    app:layout_constraintEnd_toEndOf="@id/view_line_3"
                    app:layout_constraintTop_toTopOf="@id/txt_item_total" />

                <TextView
                    android:id="@+id/txt_quantity_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_4"
                    android:textColor="@color/dialog_txt"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/txt_item_total"
                    app:layout_constraintEnd_toEndOf="@id/txt_quantity_3"
                    app:layout_constraintStart_toStartOf="@id/txt_quantity_3"
                    app:layout_constraintTop_toTopOf="@id/txt_item_total" />

                <TextView
                    android:id="@+id/txt_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_accept"
                    android:gravity="center"
                    android:paddingStart="15dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="40dp"
                    android:paddingBottom="5dp"
                    android:text="@string/accept"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.75"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_item_total" />

                <ImageView
                    android:id="@+id/img_accept"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:contentDescription="@string/img_accept"
                    android:src="@drawable/img_accept"
                    app:layout_constraintBottom_toBottomOf="@id/txt_accept"
