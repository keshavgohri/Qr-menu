                    android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@id/img_veg_1"
                    app:layout_constraintTop_toTopOf="@id/img_veg_1" />

                <TextView
                    android:id="@+id/txt_full_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/full"
                    android:textColor="@color/txt_grey"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/txt_dish_1"
                    app:layout_constraintTop_toBottomOf="@id/txt_dish_1" />

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_100"
                    android:textColor="@color/txt_black"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@id/txt_full_1"
                    app:layout_constraintEnd_toEndOf="@id/view_line_1"
                    app:layout_constraintTop_toTopOf="@id/txt_dish_1" />

                <TextView
