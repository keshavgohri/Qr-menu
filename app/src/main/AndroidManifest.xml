<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QRMenu">
        <activity
            android:name=".login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".forgot_password.ForgotPasswordActivity"
            android:exported="false" />

        <activity
            android:name=".verify_otp.VerifyOtpActivity"
            android:exported="false" />

        <activity
            android:name=".set_password.SetPasswordActivity"
            android:exported="false" />

        <activity
            android:name=".home.HomeActivity"
            android:exported="false" />

        <activity
            android:name=".order_details.OrderDetailsActivity"
            android:exported="false" />

        <activity
            android:name=".privacy_policy.PrivacyPolicyActivity"
            android:exported="false" />

        <activity
            android:name=".terms_and_conditions.TermsAndConditionsActivity"
            android:exported="false" />

        <activity
            android:name=".order_history.OrderHistoryActivity"
            android:exported="false" />

        <activity
            android:name=".profile.ProfileActivity"
            android:exported="false" />

    </application>

</manifest>